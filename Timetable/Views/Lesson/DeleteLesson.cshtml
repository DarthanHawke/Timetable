@model Timetable.Models.LessonU
@{
    ViewBag.Title = "Удаление предмета";
}

<div>
    <dl class="dl-horizontal">
        <dt>Тип</dt>
        <dd>
            @Html.DisplayFor(model => model.TypeLesson)
        </dd>

        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Цикличность</dt>
        <dd>
            @Html.DisplayFor(model => model.Cyclicality)
        </dd>
    </dl>

    <div>
        <form asp-controller="Lesson" asp-action="DeleteLesson" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>