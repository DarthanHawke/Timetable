@model Timetable.Models.UserID
@{
    ViewBag.Title = "Удаление пользователя";
}

<div>
    <dl class="dl-horizontal">
        <dt>ФИО</dt>
        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>

        <dt>Специальность</dt>
        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>Кафедра</dt>
        <dd>
            @Html.DisplayFor(model => model.Access)
        </dd>
    </dl>

    <div>
        <form asp-controller="User" asp-action="DeleteUser" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>