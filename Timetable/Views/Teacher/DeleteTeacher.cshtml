@model Timetable.Models.Teacher
@{
    ViewBag.Title = "Удаление преподавателя";
}

<div>
    <dl class="dl-horizontal">
        <dt>ФИО</dt>
        <dd>
            @Html.DisplayFor(model => model.FIO)
        </dd>

        <dt>Специальность</dt>
        <dd>
            @Html.DisplayFor(model => model.Specialization)
        </dd>

        <dt>Кафедра</dt>
        <dd>
            @Html.DisplayFor(model => model.Department)
        </dd>

        <dt>Звание</dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <div>
        <form asp-controller="Teacher" asp-action="DeleteTeacher" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>