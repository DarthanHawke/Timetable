@model Timetable.Models.NewTimetable
@{
    ViewBag.Title = "Удаление преподавателя";
}

<div>
    <dl class="dl-horizontal">
        <dt>Идентификатор пары</dt>
        <dd>
            @Html.DisplayFor(model => model.Id_Date)
        </dd>

        <dt>День недели</dt>
        <dd>
            @Html.DisplayFor(model => model.Week)
        </dd>

        <dt>Время</dt>
        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>

        <dt>Целостность</dt>
        <dd>
            @Html.DisplayFor(model => model.Integrity)
        </dd>

        <dt>Курс</dt>
        <dd>
            @Html.DisplayFor(model => model.Course)
        </dd>

        <dt>Группа</dt>
        <dd>
            @Html.DisplayFor(model => model.NumberGroup)
        </dd>

        <dt>Преподаватель</dt>
        <dd>
            @Html.DisplayFor(model => model.FIOteacher)
        </dd>

        <dt>Пара</dt>
        <dd>
            @Html.DisplayFor(model => model.NameLesson)
        </dd>

        <dt>Аудитория</dt>
        <dd>
            @Html.DisplayFor(model => model.NumberClass)
        </dd>
    </dl>

    <div>
        <form asp-controller="Timetable" asp-action="DeleteTimetable" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>