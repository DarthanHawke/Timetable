@model Timetable.Models.GroupU
@{
    ViewBag.Title = "Удаление группы";
}

<div>
    <dl class="dl-horizontal">
        <dt>Курс</dt>
        <dd>
            @Html.DisplayFor(model => model.Course)
        </dd>

        <dt>Колличество человек</dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>

        <dt>Номер</dt>
        <dd>
            @Html.DisplayFor(model => model.NumberGroup)
        </dd>
    </dl>

    <div>
        <form asp-controller="Group" asp-action="DeleteGroup" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>